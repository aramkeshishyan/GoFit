<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/primary"
    tools:context=".SecondFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:backgroundTint="@color/secondary"
                        android:textAllCaps="false"
                        android:layout_marginStart="20dp">

                    </Button>

                    <Button
                        android:id="@+id/routine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Routine"
                        android:backgroundTint="@color/secondary"
                        android:textAllCaps="false"
                        android:layout_marginStart="20dp"
                        android:layout_toRightOf="@+id/all">

                    </Button>

                    <Button
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add+"
                        android:backgroundTint="@color/secondary"
                        android:textAllCaps="false"
                        android:layout_marginStart="20dp"
                        android:layout_toRightOf="@id/routine">

                    </Button>

                </RelativeLayout>



                <LinearLayout
                    android:background="@drawable/round_back_white10_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <!--  Shoulders -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:id="@+id/shoulders"
                            android:layout_height="50dp"
                            android:src="@drawable/shoulders"
                            android:background="@drawable/round_back_white10_20"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Shoulders"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/shoulders"/>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/add1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="Add Exercise"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:backgroundTint="#3489eb"
                            app:fabSize="mini"
                            app:srcCompat="@drawable/ic_baseline_add_24"
                            tools:ignore="TouchTargetSizeCheck"/>

                    </RelativeLayout>

                </LinearLayout>

                <!--  Back -->

                <LinearLayout
                    android:background="@drawable/round_back_white10_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:padding="15dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:id="@+id/back"
                            android:layout_height="50dp"
                            android:src="@drawable/back"
                            android:background="@drawable/round_back_white10_20"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/back"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/back"/>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/add2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="Add Exercise"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:backgroundTint="#3489eb"
                            app:fabSize="mini"
                            app:srcCompat="@drawable/ic_baseline_add_24"
                            tools:ignore="TouchTargetSizeCheck"/>
                    </RelativeLayout>

                </LinearLayout>

                <!--  Chest -->

                <LinearLayout
                    android:background="@drawable/round_back_white10_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:padding="15dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:id="@+id/chest"
                            android:layout_height="50dp"
                            android:src="@drawable/chest"
                            android:background="@drawable/round_back_white10_20"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Chest"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@id/chest"/>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/add3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="Add Exercise"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:backgroundTint="#3489eb"
                            app:fabSize="mini"
                            app:srcCompat="@drawable/ic_baseline_add_24"
                            tools:ignore="TouchTargetSizeCheck"/>
                    </RelativeLayout>

                </LinearLayout>

                <!--  legs -->

                <LinearLayout
                    android:background="@drawable/round_back_white10_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:padding="15dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:id="@+id/legs"
                            android:layout_height="50dp"
                            android:src="@drawable/legs"
                            android:background="@drawable/round_back_white10_20"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Legs"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/legs"/>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/add4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="Add Exercise"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:backgroundTint="#3489eb"
                            app:fabSize="mini"
                            app:srcCompat="@drawable/ic_baseline_add_24"
                            tools:ignore="TouchTargetSizeCheck"/>
                    </RelativeLayout>

                </LinearLayout>

                <!--  Arms -->

                <LinearLayout
                    android:background="@drawable/round_back_white10_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:padding="15dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:id="@+id/arms"
                            android:layout_height="50dp"
                            android:src="@drawable/arms"
                            android:background="@drawable/round_back_white10_20"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Arms"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/arms"/>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/add5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="Add Exercise"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:backgroundTint="#3489eb"
                            app:fabSize="mini"
                            app:srcCompat="@drawable/ic_baseline_add_24"
                            tools:ignore="TouchTargetSizeCheck"/>
                    </RelativeLayout>

                </LinearLayout>

                <!--  Abs -->

                <LinearLayout
                    android:background="@drawable/round_back_white10_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:padding="15dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:id="@+id/abs"
                            android:layout_height="50dp"
                            android:src="@drawable/abs"
                            android:background="@drawable/round_back_white10_20"
                            android:padding="12dp"/>

                        <TextView
                            android:layout_marginStart="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Abs"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:layout_toEndOf="@+id/abs"/>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/add6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="Add Exercise"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:backgroundTint="#3489eb"
                            app:fabSize="mini"
                            app:srcCompat="@drawable/ic_baseline_add_24"
                            tools:ignore="TouchTargetSizeCheck"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>