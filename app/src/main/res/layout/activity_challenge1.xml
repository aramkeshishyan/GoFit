<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallengeActivity"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/chal_backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="?android:selectableItemBackground"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:contentDescription="Challenge_Back_button"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

            <TextView
                android:id="@+id/ch_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Title"
                android:textSize="25dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contentRelLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RelativeLayout1">

            <TextView
                android:id="@+id/ch_daysRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Duration:"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/ch_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Description: "
                android:fontFamily="@font/poppinsmedium"
                android:textSize="20dp"
                android:layout_below="@+id/ch_daysRemaining"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ch_exercise_RecView"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ch_description"/>

            <TextView
                android:id="@+id/ch_repetitions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Repetitions: "
                android:fontFamily="@font/poppinsmedium"
                android:layout_below="@+id/ch_exercise_RecView"/>

            <TextView
                android:id="@+id/ch_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Sets: "
                android:fontFamily="@font/poppinsmedium"
                android:layout_below="@+id/ch_repetitions"/>

            <TextView
                android:id="@+id/ch_date_accepted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Accepted:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_below="@+id/ch_sets"/>

            <TextView
                android:id="@+id/ch_date_started"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Started:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_below="@+id/ch_date_accepted"/>

            <TextView
                android:id="@+id/ch_date_ended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Ended:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_below="@+id/ch_date_started"/>

            <TextView
                android:id="@+id/ch_date_last_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Last Completed:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_below="@+id/ch_date_ended"/>

            <TextView
                android:id="@+id/ch_streak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Streak:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_below="@+id/ch_date_last_completed"/>

            <TextView
                android:id="@+id/ch_total_days_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You Completed 0/10 Days!"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_below="@+id/ch_streak"/>

            <TextView
                android:id="@+id/ch_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_below="@+id/ch_total_days_completed"/>

            <TextView
                android:id="@+id/creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created By: "
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/ch_score"/>

            <TextView
                android:id="@+id/ch_isComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:layout_below="@+id/creator"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/ch_complete"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:text="complete challenge"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/ch_isComplete"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/ch_send_friend"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Challenge Friends"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/ch_complete"
                android:layout_centerHorizontal="true"/>



        </RelativeLayout>



    </RelativeLayout>


</ScrollView>