<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <ImageView
        android:id="@+id/friends_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/search_button"
        app:layout_constraintEnd_toStartOf="@+id/search_button"
        app:layout_constraintTop_toTopOf="@+id/search_button"
        app:srcCompat="@drawable/ic_friends" />

    <ImageView
        android:id="@+id/search_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_pic_card"
        app:layout_constraintEnd_toStartOf="@+id/profile_pic_card"
        app:layout_constraintTop_toTopOf="@+id/profile_pic_card"
        app:srcCompat="@drawable/ic_search" />

    <androidx.cardview.widget.CardView
        android:id="@+id/meals_view"
        android:layout_width="164dp"
        android:layout_height="148dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="5dp"
        app:layout_constraintRight_toRightOf="@id/achievements_card"
        app:layout_constraintTop_toBottomOf="@+id/achievements_card">

        <TextView
            android:id="@+id/meals_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="55dp"
            android:textSize="20dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Meals" />
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/meals_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="65dp"
            app:trackCornerRadius="2dp"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/meals_chip"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="100dp"
            android:text="0/0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:chipBackgroundColor="@color/purple_500"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/workout_card"
        android:layout_width="164dp"
        android:layout_height="148dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="5dp"
        app:layout_constraintLeft_toLeftOf="@id/calories_card"
        app:layout_constraintTop_toBottomOf="@id/calories_card">

        <TextView
            android:id="@+id/workout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="55dp"
            android:textSize="20dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Workouts" />
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/workout_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="65dp"
            app:trackCornerRadius="2dp"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/workout_chip"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="100dp"
            android:text="0/0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:chipBackgroundColor="@color/purple_500"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/achievements_card"
        android:layout_marginTop="10dp"
        android:layout_width="164dp"
        android:layout_height="148dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="5dp"
        app:layout_constraintRight_toRightOf="@id/progress_history_card"
        app:layout_constraintTop_toBottomOf="@+id/progress_history_card">

        <TextView
            android:id="@+id/achievement_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Achievements" />
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/achievement_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="65dp"
            app:trackCornerRadius="2dp"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/achievement_chip"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="100dp"
            android:text="0/0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:chipBackgroundColor="@color/purple_500"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/calories_card"
        android:layout_width="164dp"
        android:layout_height="148dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/progress_history_card"
        app:layout_constraintTop_toBottomOf="@id/progress_history_card">

        <TextView
            android:id="@+id/calories_kcal_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 kcal"
            android:textAlignment="center"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/poppinsmedium"/>

        <TextView
            android:id="@+id/calories_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Calories\nBurned" />
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/calories_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="65dp"
            app:trackCornerRadius="2dp"
            />

        <com.google.android.material.chip.Chip
            android:id="@+id/calories_chip"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="100dp"
            android:text="0/0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:chipBackgroundColor="@color/purple_500"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Home"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/daily_progress_card"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/progress_history_card"
        android:layout_width="344dp"
        android:layout_height="74dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="@+id/daily_progress_card"
        app:layout_constraintStart_toStartOf="@+id/daily_progress_card"
        app:layout_constraintTop_toBottomOf="@+id/daily_progress_card" >


        <ImageView
            android:id="@+id/progress_history_arrow"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="295dp"
            app:srcCompat="@drawable/ic_arrow_right_gray" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_history_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="55dp"
            app:trackCornerRadius="2dp"/>

        <TextView
            android:id="@+id/progress_history_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Progress History" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/daily_progress_card"
        android:layout_width="344dp"
        android:layout_height="116dp"
        android:outlineAmbientShadowColor="@color/cardview_dark_background"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello_greeting">

        <TextView
            android:id="@+id/daily_progress_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="90dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Here you can see the completed progress for the day"
            android:textColor="#616161"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/daily_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Daily Progress"
            android:textSize="20dp" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/daily_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="95dp"
            app:trackCornerRadius="2dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/hello_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:text="Hello John"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/home_text"
        app:layout_constraintTop_toBottomOf="@+id/home_text" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_pic_card"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="30dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>