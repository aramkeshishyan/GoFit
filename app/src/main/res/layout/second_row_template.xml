<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card_layout"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/container_color"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/linear_layout_cotainer_card">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:id="@+id/complete_button"
                app:srcCompat = "@drawable/baseline_send"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:minWidth="40dp"
                android:minHeight="40dp"
                >

            </com.google.android.material.floatingactionbutton.FloatingActionButton>

            <TextView
                android:layout_width="wrap_content"
                android:text="Challenge Name"
                android:id="@+id/challenge_name"
                android:layout_toRightOf="@id/complete_button"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:textColor="@color/black">

            </TextView>




            <TextView
                android:layout_width="match_parent"
                android:text="Description"
                android:id="@+id/description_name"
                android:layout_below="@+id/challenge_name"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black">

            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>