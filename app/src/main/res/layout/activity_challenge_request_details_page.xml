<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallengeRequestDetailsPage">

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/chal_backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:background="?android:selectableItemBackground"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:contentDescription="Challenge_Back_button"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <TextView
            android:id="@+id/ch_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Title"
            android:textSize="25dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/ch_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Duration:"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/RelativeLayout1"
        app:layout_constraintStart_toStartOf="@+id/RelativeLayout1" />

    <TextView
        android:id="@+id/ch_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Description: "
        android:fontFamily="@font/poppinsmedium"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ch_duration"
        app:layout_constraintStart_toStartOf="@+id/RelativeLayout1"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ch_exercise_RecView"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ch_description"
        app:layout_constraintStart_toStartOf="@+id/ch_description"/>

    <TextView
        android:id="@+id/ch_repetitions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Repetitions: "
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@+id/ch_exercise_RecView"
        app:layout_constraintStart_toStartOf="@+id/RelativeLayout1"/>

    <TextView
        android:id="@+id/ch_sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:text="Sets: "
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@+id/ch_exercise_RecView"
        app:layout_constraintStart_toEndOf="@+id/ch_repetitions"/>



    <!-- Layout for profile image and user name -->
    <RelativeLayout
        android:id="@+id/layout_profileImgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ch_repetitions"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ch_sets">


        <!-- Card view allows profile image to be circular -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profileImgCardV"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/ch_creator_profileImgV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/profile_picture"
                android:src="@drawable/ic_launcher_background"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ch_creator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billy Bob"
            android:textStyle="bold"
            android:textSize="30sp"
            android:paddingTop="5dp"
            android:layout_below="@+id/profileImgCardV"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/ch_creator_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="billyBob@gmail.com"
            android:textStyle="bold"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:layout_below="@+id/ch_creator_name"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>