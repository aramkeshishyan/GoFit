<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/nt_image"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background">

        </ImageView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_margin="5dp"
            >
            <ImageButton
                android:id="@+id/nt_backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:contentDescription="@string/back"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/nt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nt_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center_horizontal"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="30dp" />



        <TextView
            android:id="@+id/nt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nt_title"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppinsmedium"
            android:text="Breakfast"
            android:textColor="@color/drak_gray"
            android:textSize="20dp" />

        <TableRow
            android:id="@+id/table_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nt_type"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/nt_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center_horizontal"
                android:text="Calories "
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/nt_proteins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center_horizontal"
                android:text="Protains "
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/nt_carbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center_horizontal"
                android:text="Carbs "
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/nt_fats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:gravity="center_horizontal"
                android:text="Fats "
                android:textColor="@color/black"
                android:textSize="18dp" />
        </TableRow>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/table_row"
            app:dividerColor="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="18dp"/>
        <TextView
            android:id="@+id/nt_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/table_row"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Ingredients:"
            android:textColor="@color/drak_gray"
            android:textSize="16dp" />
    </RelativeLayout>

</ScrollView>