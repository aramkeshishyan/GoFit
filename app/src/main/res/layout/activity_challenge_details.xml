<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallengeDetails">

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/challenge_backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:background="?android:selectableItemBackground"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:contentDescription="Challenge_Back_button"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

        <TextView
            android:id="@+id/challenge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Title"
            android:textSize="25dp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/Challenge_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Challenge Duration:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/Challenge_RecView"
        app:layout_constraintTop_toBottomOf="@+id/Challenge_RecView" />

    <TextView
        android:id="@+id/Challenge_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:text="# of Reps:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/Challenge_duration"
        app:layout_constraintTop_toBottomOf="@+id/Challenge_duration" />

    <TextView
        android:id="@+id/Challenge_sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:text="# of Sets:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/Challenge_reps"
        app:layout_constraintTop_toBottomOf="@+id/Challenge_reps" />

    <TextView
        android:id="@+id/Challenge_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Challenge ID:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/Challenge_sets"
        app:layout_constraintTop_toBottomOf="@+id/Challenge_sets" />

    <TextView
        android:id="@+id/Challenge_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:text="Creator's Email:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/Challenge_id"
        app:layout_constraintTop_toBottomOf="@+id/Challenge_id" />

    <TextView
        android:id="@+id/Challenge_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:text="Description:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/Challenge_email"
        app:layout_constraintTop_toBottomOf="@+id/Challenge_email" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Challenge_RecView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RelativeLayout1" />

</androidx.constraintlayout.widget.ConstraintLayout>